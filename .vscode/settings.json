{
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false,
    "yaml": true,
    "dart": true
  },
  "github.copilot.advanced": {
    "length": 500,
    "temperature": 0.1
  },
  // تنظیمات بهبود RTL و فونت فارسی
  "editor.fontFamily": "'Vazirmatn', 'JetBrains Mono', 'Fira Code', 'SF Mono', monospace",
  "editor.fontSize": 14,
  "editor.fontLigatures": true,
  "editor.wordWrap": "on",
  "editor.unicodeHighlight.invisibleCharacters": false,
  
  // تنظیمات ترمینال - فونت عادی
  "terminal.integrated.fontFamily": "'SF Mono', Monaco, Menlo, 'Courier New', monospace",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.fontWeightBold": "bold", 
  "terminal.integrated.lineHeight": 1.3,
  "terminal.integrated.letterSpacing": 0,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.shell.osx": "/bin/zsh",
  "terminal.integrated.gpuAcceleration": "off",
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.env.osx": {
    "LC_ALL": "en_US.UTF-8",
    "LANG": "en_US.UTF-8", 
    "LC_CTYPE": "en_US.UTF-8",
    "LANGUAGE": "en_US.UTF-8"
  },
  
  // تنظیمات چت کوپایلوت - فونت فارسی
  "github.copilot.chat.followUps": "on",
  "github.copilot.chat.fontFamily": "'Vazirmatn', 'SF Mono', 'Monaco', monospace",
  "github.copilot.chat.fontSize": 14,
  "github.copilot.chat.lineHeight": 1.4,
  
  // تنظیمات کلی UI برای فونت فارسی
  "workbench.fontAliasing": "antialiased",
  "workbench.colorTheme": "Default Dark Modern",
  "chat.editor.fontFamily": "'Vazirmatn', 'SF Mono', 'Monaco', monospace",
  "chat.editor.fontSize": 14,
  "editor.suggest.showWords": false,
  "files.associations": {
    "*.dart": "dart"
  },
  "terminal.integrated.rightClickBehavior": "copyPaste",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.defaultProfile.osx": "zsh"
  
}
